@model BrewersBuddy.Models.BatchAction

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>BatchAction</legend>

    <table class="table table-striped">
    <tr><td>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.Title)</b>&nbsp;&nbsp;
            </div>
        </td><td>
            <div class="display-field">
            @Html.DisplayFor(model => model.Title)
            </div>
        </td>
    </tr>
    <tr><td>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.ActionDate)</b>&nbsp;&nbsp;
            </div>
        </td><td>
            <div class="display-field">
            @Html.DisplayFor(model => model.ActionDate)
            </div>
        </td>
    </tr>
    <tr><td>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.Description)</b>&nbsp;&nbsp;
            </div>
        </td><td>
            <div class="display-field">
                @Html.TextArea("Description", new { rows=10, columns=40 })
            </div>
        </td>
    </tr>
    <tr><td>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.Performer)</b>&nbsp;&nbsp;
            </div>
        </td><td>
            <div class="display-field">
            @Html.DisplayFor(model => model.PerformerName)
            </div>
        </td>
    </tr>
</table>

<br>    
</fieldset>

<p>
    @Html.ActionLink("Back to Batch", "Details/"+Model.BatchId, "Batch", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Edit", "Edit", new { id=Model.ActionId }, new { @class = "btn" })
</p>
