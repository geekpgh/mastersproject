@using BrewersBuddy.Models;
@using System.Linq;

@model IEnumerable<BrewersBuddy.Models.UserProfile>

@{
    ViewBag.Title = "Friend Results";
}

<h2>@ViewBag.Title</h2>

@if (Model.Count() == 0)
{ 
    <div>No results found</div>
}
else { 
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
            @if (((IEnumerable<int>)ViewBag.FriendIds).Contains(item.UserId))
            {
                <div>Already Friends</div>
            }
            else 
            {
                @Html.ActionLink("Add Friend", "FriendsList", new { ID = item.UserId }, new { @class = "btn btn-mini btn-primary" })
            }
            </td>
        </tr>
    }
    </table>
}

<h4>Search again</h4>

@Html.Partial("_SearchForm")

