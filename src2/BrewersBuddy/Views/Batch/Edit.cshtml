@using BrewersBuddy.Utilities;
@model BrewersBuddy.Models.Batch

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Batch</legend>

        @Html.HiddenFor(model => model.BatchId)
        @Html.HiddenFor(model => model.OwnerId)
        @Html.HiddenFor(model => model.StartDate)


        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="editor-field">
            @Html.EnumDropDownListFor(model => model.Type)
            @Html.ValidationMessageFor(model => model.Type)
        </div>

        <div class="editor-field">
            @Html.TextArea("Description", new { rows=10, columns=40 })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input class="btn btn-success" type="submit" value="Save" />
            @Html.ActionLink("Cancel", "Details", "Batch", new { id = Model.BatchId }, new { @class = "btn btn-danger" })
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
