@model BrewersBuddy.Models.Recipe

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Recipe Information</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.RecipeId)
        @Html.HiddenFor(model => model.AddDate)
        @Html.HiddenFor(model => model.OwnerId)
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description, new { rows=10, columns=40 })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Prep)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Prep, new { rows=10, columns=40 })
            @Html.ValidationMessageFor(model => model.Prep)
        </div>  
                <div class="editor-label">
            @Html.LabelFor(model => model.Process)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Process, new { rows=10, columns=40 })
            @Html.ValidationMessageFor(model => model.Process)
        </div>  
                <div class="editor-label">
            @Html.LabelFor(model => model.Finishing)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Finishing, new { rows=10, columns=40 })
            @Html.ValidationMessageFor(model => model.Finishing)
        </div>  
                        <div class="editor-label">
            @Html.LabelFor(model => model.Costs)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Costs, new { rows=10, columns=40 })
            @Html.ValidationMessageFor(model => model.Costs)
        </div> 
        <p>
            <input class="btn btn-success" type="submit" value="Save" />
            @Html.ActionLink("Cancel", "Details", "Recipe", new { id = Model.RecipeId }, new { @class = "btn btn-danger" })
        </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
