@model BrewersBuddy.Models.Container

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this batch from inventory?</h3>

<table class="table table-striped">
    <tr>
        <td width="100"><strong>@Html.DisplayNameFor(model => model.Name)</strong></td>
        <td>@Html.DisplayFor(model => model.Name)</td>
    </tr>
    <tr>
        <td width="100"><strong>@Html.DisplayNameFor(model => model.Type)</strong></td>
        <td>@Html.DisplayFor(model => model.Type)</td>
    </tr>
    <tr>
        <td width="100"><strong>@Html.DisplayNameFor(model => model.Quantity)</strong></td>
        <td>@Html.DisplayFor(model => model.Quantity)</td>
    </tr>
    <tr>
        <td width="100"><strong>@Html.DisplayNameFor(model => model.Volume)</strong></td>
        <td>@Html.DisplayFor(model => model.Volume) @Html.DisplayFor(model => model.Units)</td>
    </tr>
</table>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input class="btn btn-success" type="submit" value="Delete" />
        @Html.ActionLink("Cancel", "Details", "Container", new { id = Model.ContainerId }, new { @class = "btn btn-danger" })
    </p>
}
