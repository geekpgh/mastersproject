        <td>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.Quantity)</b>&nbsp;&nbsp;
            </div>
        </td>
        <td>
            <div class="display-field">
            @Html.DisplayFor(model => model.Quantity)
            </div>
        </td>
    </tr>
</table>

<br /><br />
        
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input class="btn btn-success" type="submit" value="Delete" />
        @Html.ActionLink("Cancel", "Details", "Container", new { id = Model.ContainerId }, new { @class = "btn btn-danger" })
    </p>
}
