<table>
    <tr>
        <td WIDTH=150>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.Name)</b>&nbsp;&nbsp;
            </div>
        </td>
        <td>
            <div class="display-field">
            @Html.DisplayFor(model => model.Name)
            </div>
        </td>
    </tr>    <tr>
        <td>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.Type)</b>&nbsp;&nbsp;
            </div>
        </td>
        <td>
            <div class="display-field">
            @Html.DisplayFor(model => model.Type)
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.Volume)</b>&nbsp;&nbsp;
            </div>
        </td>
        <td>
            <div class="display-field">
            @Html.DisplayFor(model => model.Volume)&nbsp;
