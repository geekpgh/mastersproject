@model BrewersBuddy.Models.BatchNote

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>BatchNote</legend>

    <table class="table table-striped">
        <tr><td>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.Title)</b>&nbsp;&nbsp;
            </div>
        </td><td>
            <div class="display-field">
            @Html.DisplayFor(model => model.Title)
            </div>
        </td>
    </tr>
    <tr><td>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.AuthorDate)</b>&nbsp;&nbsp;
            </div>
        </td><td>
            <div class="display-field">
            @Html.DisplayFor(model => model.AuthorDate)
            </div>
        </td>
    </tr>
    <tr><td>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.Text)</b>&nbsp;&nbsp;
            </div>
        </td><td>
            <div class="display-field">
            @Html.TextArea("Text", new { rows=10, columns=40 })
            </div>
        </td>
    </tr>
    <tr><td>
            <div class="display-label">
            <b>@Html.DisplayNameFor(model => model.Author)</b>&nbsp;&nbsp;
            </div>
        </td><td>
            <div class="display-field">
            @Html.DisplayFor(model => model.AuthorName)
            </div>
        </td>
    </tr>
</table>

<br>    
</fieldset>

<p>
    @Html.ActionLink("Back to Batch", "Details/"+Model.BatchId, "Batch", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Edit", "Edit", new { id=Model.NoteId }, new { @class = "btn" })
</p>
