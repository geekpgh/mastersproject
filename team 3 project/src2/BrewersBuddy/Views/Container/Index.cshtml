@using BrewersBuddy.Utilities;
@model IEnumerable<BrewersBuddy.Models.Container>

@{
    ViewBag.Title = "Index";
}

<h2>Cellar</h2>

<div class="index-list">
@if (Model.Count() == 0)
{
    <div class="row"><br />
		<div class="span9">
            You have not added any finished batches to you cellar yet.  Go to <b>@Html.ActionLink("Batches", "Index", "Batch")</b> to add one.
        </div><br /><br />
    </div>
}
else {
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Quantity</th>
                <th>Volume</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id=item.ContainerId })
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td> 
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume) @Html.DisplayFor(modelItem => item.Units)
            </td>
        </tr>
    }
        </tbody>
    </table>
}
</div>