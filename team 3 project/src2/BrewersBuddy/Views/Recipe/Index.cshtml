@using BrewersBuddy.Utilities;
@model IEnumerable<BrewersBuddy.Models.Recipe>

@{
    ViewBag.Title = "Recipes";
}

<h2>My Recipes</h2>
<div class="subnav" data-spy="affix" data-offset-top="70">
    <ul class="nav nav-pills">
        @Html.SubmenuActionLink("My Recipes", "Index", "Recipe")
        @Html.SubmenuActionLink("Friend's Recipes", "Friends", "Recipe")
        @Html.SubmenuActionLink("Create New", "Create", "Recipe")
    </ul>
</div>

<div class="index-list">
@if (Model.Count() == 0) {
    <div class="row">
		<div class="span9">
            You haven't added any recipes yet. @Html.ActionLink("Create", "Create") one now.
        </div>
    </div>
}
@foreach (var item in Model) {
	<div class="row">
		<div class="span9">
            <h4>@Html.ActionLink(item.Name, "Details", new { id=item.RecipeId })</h4>
            <p>
                @Html.DisplayFor(modelItem => item.Description)
            </p>
            <p>
                <span class="label">@item.AddDate.ToShortDateString()</span>
            </p>
            <hr />
		</div>
	</div>
}
</div>