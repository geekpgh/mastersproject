@model BrewersBuddy.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>


<h3>Use a local account to log in.</h3>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "The following errors occurred", new { @class = "alert alert-error" })

    <fieldset>
        <legend></legend>
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName)
        @Html.ValidationMessageFor(m => m.UserName)
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
        <label class="checkbox">
            @Html.CheckBoxFor(m => m.RememberMe) Remember me
        </label>
        <input type="submit" class="btn btn-primary" value="Log in" />
    </fieldset>
    <br/>
    <p>
        @Html.ActionLink("Recover if you forgot your password.", "ForgotPassword")
    </p>
   <p>
        @Html.ActionLink("Register if you don't have an account.", "Register")
    </p>
}

